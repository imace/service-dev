          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.provider_class">net.sf.ehcache.hibernate.EhCacheProvider</property>

		<!-- configuration pool via c3p0 -->
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">30</property>
		<property name="hibernate.c3p0.timeout">10</property> <!-- seconds --><!-- default: 0 -->
		<property name="hibernate.c3p0.max_statements">50</property> <!-- default: 0 -->
		<property name="hibernate.c3p0.acquire_increment">1</property> <!-- default: 1 -->
		<property name="hibernate.c3p0.idle_test_period">10</property> <!-- seconds --><!-- default: 0 -->
		<property name="c3p0.testConnectionOnCheckin">true</property>
		<property name="c3p0.acquireRetryAttempts">30</property>
		<property name="c3p0.acquireRetryDelay">100</property>
		<property name="c3p0.breakAfterAcquireFailure">false</property>

		<property name="hibernate.dialect"><!--指定数据库使用的方言 -->
			org.hibernate.dialect.MySQLMyISAMDialect
